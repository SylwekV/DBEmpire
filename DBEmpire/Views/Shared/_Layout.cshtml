<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DB Empire</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("DB Empire", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
                @Html.ActionLink(HttpContext.Current.Session["UserName"].ToString(), "Index", "Home", new {area = ""}, new {@class = "navbar-brand", @style = "margin-left: 500px"})
            </div>
           
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">    
            @RenderBody()
        <div>
            <div class="navbar navbar-fixed-bottom">
                <hr/>
                <footer>
                    <p>&copy; @DateTime.Now.Year - DB Empire</p>
                </footer>
            </div>
       </div>
</div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>